{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/jasmine-framework"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "checkJs": false,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "./tests/**/*.ts",
    "./api-mocks/**/*.ts",
  ]
}