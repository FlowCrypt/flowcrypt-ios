{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "checkJs": false,
    "outDir": "./build/ts",
    "baseUrl": "./",
    "paths": {
      "openpgp": ["source/lib"]
    },
    "traceResolution": false,
    "typeRoots": [
      "./source/core/types/",
      "./node_modules/@types/"
    ]
  },
  "include": [
    "./source/entrypoint-bare.ts",
    "./source/test.ts",
    "./source/gen-compat-assets.ts"
  ],
  "exclude": [
    "**/build/**",
    "**/node_modules/**"
  ]
}